doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='robots', content='noindex, nofollow')
    title Fireside chat
    <!-- Bootstrap -->
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    <!-- Styles -->
    link(rel='stylesheet', href='/css/normalize.css')
    <!-- link(rel='stylesheet', media='screen and (max-width: 480px)', href='/css/app-small.css') -->
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
    script(src='https://cdn.firebase.com/v0/firebase.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
    script(type='text/javascript', src='https://cdn.firebase.com/js/simple-login/1.3.0/firebase-simple-login.js')

  body
    .row
      .col-md-4
      .col-md-4#header Fireside Chat
      .col-md-4
    #container
      input#nameInput(type='text', placeholder='name')
      input#messageInput(type='text', placeholder='your message')
      #messagesDiv
        audio#alert(src='/media/pop_up_alert_tone.mp3', preload='auto')
      button#reset(type='button') Scrap this chat
      



    <!-- Don't need jquery script if using jquery link below -->
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/bootstrap.min.js')
    script(src='/js/vendor/lodash.js')
    <!-- script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js') -->
    <!-- script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js') -->
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')
